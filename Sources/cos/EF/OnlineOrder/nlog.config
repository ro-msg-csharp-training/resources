<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\logs\OnlineOrder\internal-nlog.txt"
	 >
	<variable name="baseLogDirectory" value="c:\logs\OnlineOrder\${shortdate}" />

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<target name="all" xsi:type="File" fileName="${baseLogDirectory}\${logger}.txt" layout="[${longdate} ${uppercase:${level}} OnlineOrder] ${message} ${exception:format=tostring}"/>
		<!--Console Target for hosting lifetime messages to improve Docker / Visual Studio startup detection -->
		<target xsi:type="Console" name="lifetimeConsole" layout="${MicrosoftConsoleLayout}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--All logs, including from Microsoft-->
		<logger name="*" minlevel="Trace" writeTo="all" />


		
	</rules>
</nlog>